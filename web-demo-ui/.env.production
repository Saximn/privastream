# Production Environment Configuration
# Copy this to .env and customize for your production environment

# Domain Configuration (REQUIRED for production)
DOMAIN=your-domain.com
ANNOUNCED_IP=your-server-public-ip

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Security
SECRET_KEY=your-very-secure-secret-key-change-this-random-string-123456789

# Backend Configuration
FLASK_PORT=5000
FLASK_SSL_PORT=5443

# MediaSoup Configuration
MEDIASOUP_PORT=3001
MEDIASOUP_SSL_PORT=3443

# Service Ports
VIDEO_SERVICE_PORT=5001
AUDIO_SERVICE_PORT=5002
FACE_ENROLLMENT_PORT=5003

# Frontend Configuration
FRONTEND_PORT=3000
FRONTEND_SSL_PORT=3443

# Frontend Service URLs (Production - use your domain)
FRONTEND_API_URL=https://your-domain.com:5443
FRONTEND_MEDIASOUP_URL=https://your-domain.com:3443
FRONTEND_VIDEO_SERVICE_URL=https://your-domain.com:5001
FRONTEND_FACE_ENROLLMENT_URL=https://your-domain.com:5003
FRONTEND_REDACTION_SERVICE_URL=https://your-domain.com:5002

# CORS Configuration (Production - restrict to your domain)
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Processing Configuration
PROCESSING_DELAY_MS=8000
FRAME_RATE=30
PROCESS_EVERY_NTH_FRAME=15
BUFFER_DURATION_MS=3000

# WebRTC Configuration
RTC_MIN_PORT=10000
RTC_MAX_PORT=10100
ENABLE_UDP=true
ENABLE_TCP=true
PREFER_UDP=true