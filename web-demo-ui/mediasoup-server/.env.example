# MediaSoup Server Environment Configuration

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=3001
NODE_ENV=production

# SSL Configuration (for production)
SSL_ENABLED=true
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# MediaSoup Configuration
RTC_MIN_PORT=10000
RTC_MAX_PORT=10100
ANNOUNCED_IP=127.0.0.1
LISTEN_IP=0.0.0.0

# Service URLs
REDACTION_SERVICE_URL=http://localhost:5002
VIDEO_SERVICE_URL=http://localhost:5001

# Processing Configuration
PROCESSING_DELAY_MS=8000
FRAME_RATE=30
PROCESS_EVERY_NTH_FRAME=15
BUFFER_DURATION_MS=3000

# WebRTC Transport Options
ENABLE_UDP=true
ENABLE_TCP=true
PREFER_UDP=true

# CORS Configuration
CORS_ORIGINS=*